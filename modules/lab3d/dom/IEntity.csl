import eigen.Quat;
import eigen.Vec3;

/*
	Entity with a spatial position and name within a project.
 */
interface IEntity extends IDecoratable
{
	// Entity name.
	string name;
	
	// Entity visibility.
	bool visible;

	// Scale applied to the entity.
	Vec3 scale;

	// Position in world space.
	Vec3 position;

	// Orientation in world space.
	Quat orientation;

	// Bounding box in world space.
	BoundingBox bounds;
};
