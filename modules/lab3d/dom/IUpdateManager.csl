interface IUpdateManager
{
	void addObserver( in IUpdateCallback observer );
	
	void removeObserver( in IUpdateCallback observer );
	
	//! Sets the interval at which the observers will be notified.
	
	/*! 
		Starts or restarts the timer using the given interval in milliseconds. 
		After a call to that method, all observers will be notified at specified 
		rate. The frequency will be ( 1000 / milliseconds ) in Hertz.
	 */
	void start( in double milliseconds );
	
	void stop();
};